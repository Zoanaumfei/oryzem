/* =================================================================
   12. EXEMPLOS DE USO (para referência)
   ================================================================= */

/*
  USO NO HTML:
  
  <!-- Botão primário padrão -->
  <button class="btn btn--primary btn--md">Entrar</button>
  
  <!-- Botão com ícone -->
  <button class="btn btn--primary btn--md btn--icon-left">
    <svg class="btn__icon">...</svg>
    Entrar
  </button>
  
  <!-- Botão outline -->
  <button class="btn btn--outline-primary btn--sm">Cancelar</button>
  
  <!-- Botão full width -->
  <button class="btn btn--primary btn--md btn--full">Confirmar</button>
  
  <!-- Grupo de botões -->
  <div class="btn-group">
    <button class="btn btn--secondary">Esquerda</button>
    <button class="btn btn--secondary">Centro</button>
    <button class="btn btn--secondary">Direita</button>
  </div>
*/
/* ============================================
   VOLKSWAGEN BUTTON SYSTEM
   Sistema completo de botões baseado no design system VW
   ============================================ */

/* =================================================================
   1. BASE & RESET PARA TODOS OS BOTÕES
   ================================================================= */

/* Reset base para todos os elementos button */
button {
    all: unset;
    box-sizing: border-box;
    font-family: inherit;
    cursor: pointer;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
}

/* Classe base para todos os botões estilizados */
.btn {
    /* Layout */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    position: relative;
    overflow: hidden;
    
    /* Tipografia */
    font-family: var(--font-primary);
    font-weight: var(--font-medium);
    line-height: var(--leading-normal);
    text-align: center;
    text-decoration: none;
    white-space: nowrap;
    
    /* Bordas e visual */
    border-style: solid;
    border-width: 2px;
    transition: all var(--duration-200) var(--ease-in-out);
    
    /* Interação */
    cursor: pointer;
    user-select: none;
    
    /* Remove estilos mobile */
    -webkit-tap-highlight-color: transparent;
}

